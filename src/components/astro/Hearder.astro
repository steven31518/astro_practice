---
import MotionNav from "../React/MotionNav";
import Button from "../React/Button";

const { title } = Astro.props;
---

<div class="flex justify-between w-full py-2 px-4 h-[64px] mb-4">
  <h1 class="text-bold text-lg p-3">{title}</h1>
  <MotionNav client:load>
    <a href="/"
      ><Button
        variant="text"
        themeColor="secondary"
        className="w-[100px] rounded-lg"
      >
        Home
      </Button></a
    >
    <a href="/newPage"
      ><Button
        variant="text"
        themeColor="secondary"
        className="w-[100px]  rounded-lg"
      >
        Blog
      </Button></a
    >
    <a href=""
      ><Button
        variant="text"
        themeColor="secondary"
        className="w-[100px]  rounded-lg"
      >
        Author
      </Button></a
    >
  </MotionNav>
</div>
