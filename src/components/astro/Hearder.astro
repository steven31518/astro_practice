---
import MotionNav from "../React/MotionNav";
import Button from "../React/Button";

const { title } = Astro.props;
---

<div class="fixed top-0 w-full bg-slate-100 z-20">
  <div class="grid grid-cols-12 px-2 py-2 h-[60px]">
    <div class="col-span-10 lg:col-span-11"><h1 class="text-bold text-lg p-3">{title}</h1></div>
    <div class="col-span-2 lg:col-span-1">
      <MotionNav client:load>
      <a href="/"
        ><Button
          variant="text"
          themeColor="secondary"
          className="w-[100px] rounded-lg"
        >
          Home
        </Button></a
      >
      <a href="/newPage"
        ><Button
          variant="text"
          themeColor="secondary"
          className="w-[100px]  rounded-lg"
        >
          Blog
        </Button></a
      >
      <a href=""
        ><Button
          variant="text"
          themeColor="secondary"
          className="w-[100px]  rounded-lg"
        >
          Author
        </Button>
        </a>
    </MotionNav></div>
   
    
  </div>
</div>
